<div class="page-title-container">
            <div class="container">
                <div class="page-title pull-left">
                <h1 class="entry-title">Show Venue</h1>
                </div>
                <ul class="breadcrumbs pull-right">
                    <li><a href="#">HOME</a></li>
                    <li class="active">Show Venue</li>
                </ul>
            </div>
</div>

<section id="content">
            <div class="container">
                <div id="main">
                    <div class="row">
                        <div class="col-sm-4 col-md-3">
                        <h4 class="search-results-title"><b>View your venue details</b></h4>
                            
                        </div>
                        <div class="col-sm-8 col-md-9">
                            <div class="hotel-list">
                                <div class="row image-box hotel listing-style1">
                                    <div class="col-sm-6 col-md-6">
                                        <article class="box">
                                            <figure>
                                                <p>
                                                   <%= image_tag(@venue.featured_image) %>
                                                </p>
                                            </figure>
                                            <div class="details">
                                                <span class="price">
                                                    <small>AVG</small>
                                                    ZAR: <%= @venue.price %>
                                                </span>
                                                <h4 class="box-title"><%= @venue.name %>
                                                <small><%= @venue.location %></small></h4>
                                                <div class="feedback">
                                                    <div data-placement="bottom" data-toggle="tooltip" class="five-stars-container" title="" data-original-title="4 stars"><span style="width: 80%;" class="five-stars"></span></div>
                                                    <span class="review">Size: <b> [<%= @venue.size %>] </b> square feet</span>
                                                </div>
                                                <p class="description"><%= @venue.description %></p>
                                                <div class="action">
                                                    <a><%= link_to 'Edit', edit_venue_path(@venue), class: "button btn-small" %></a>
                                                    <%= link_to 'Back', venues_path, class: "button btn-small" %>
                                                </div>
                                            </div>
                                        </article>
                                    </div>
                                </div>
                            </div>
                          </div>
                    </div>
                </div>
            </div>
        </section>

       


<p id="notice"><%= notice %></p>


